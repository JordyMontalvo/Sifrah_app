.tree ul:before,
.tree code:before,
.tree span:before {
  outline: solid 1px var(--col-2);
  content: "";
  height: 0.5em;
  left: 50%;
  position: absolute;
}

/*  .tree ul:hover:before,
  .tree code:hover:before,
  .tree li:hover>span:before {
    outline: solid 1px var(--col-1);
  }*/

.tree span::after {
  outline: solid 1px var(--col-1);
  content: "";
  top: -8px;
  left: calc(50% - 5px);
  width: 8px;
  height: 8px;
  /*    background-color: var(--bg-1);*/
  background-color: #888;
  border: 1px solid var(--col-1);
  position: absolute;
  opacity: 1;
  border-radius: 100%;
  transition: all 0.2s ease;
}

.tree ul:before {
  top: -0.5em;
}

.tree code:before,
.tree span:before {
  top: -0.55em;
}

.tree > li {
  margin-top: 0;
}

.tree > li:before,
.tree > li:after,
.tree > li > code:before,
.tree > li > span:before,
.tree > li > span:after {
  outline: none;
  display: none;
}

.highlighted {
  border: 2px solid var(--highlighted) !important;
}

