@import 'vars.styl'

body, .app
  font-family global-font
  background app-bg
  color app-text
  transition background 0.3s, color 0.3s

// Modo claro
.light-mode, .light-mode .app
  background light-bg
  color light-text

// Modo oscuro
.dark-mode, .dark-mode .app
  background dark-bg
  color dark-text

// Tarjetas y contenedores
.card, .profile-glass-card
  background app-bg-card
  color app-text
  border 1px solid app-border
  transition background 0.3s, color 0.3s, border 0.3s

.dark-mode .card, .dark-mode  .dark-mode .profile-glass-card
  background dark-bg-card
  color dark-text
  border 1px solid dark-border

.light-mode .card, .light-mode .light-mode .profile-glass-card
  background light-bg-card
  color light-text
  border 1px solid light-border

.app
  min-height 100vh
  display flex 
  flex-direction column
  >header
    _flex()
    // background c-blue
    // background c-main-red
    // background c-red
    background linear-gradient(to right, rgba(8, 56, 92, 1), rgba(17, 95, 153, 1), rgba(8, 56, 92, 1))
    color white
    padding 16px
    &.silver
      background linear-gradient(-225deg, #77FFD2 0%, #6297DB 48%, #1EECFF 100%)
    &.gold
      background linear-gradient(to right, #BF953F, #fff380, #B38728, #fff480, #AA771C)
  >section
    display flex
    overflow hidden
    flex 1
    // layout
    .menu
      padding 10px 20px
    .content
      transition all .5s
    .menu
      min-width 70%
      transform translate(-100%, 0)
    .content
      min-width 100%
      transform translate(-70%, 0)
      overflow hidden
      position relative
    &.open
      .menu 
      .content
        transform translate(0, 0)
        height auto
    // style
    .content
      background white 
      >header
        padding 0px 40px
        display flex
        align-items center
        justify-content: space-between;
        color #D66500
        border-bottom: 2px solid #00796b;
        .social
          font-size 20px
          margin-left 20px
          a
            padding 8px
      >section
        padding 8px 16px
        padding-bottom 72px

@media (max-width: 450px) 
    .app >section .content >header 
      display none

