// layout
_grid()
  display grid
  grid-template-rows auto 1fr auto

_flex()
  display flex
  justify-content space-between
  align-items center

// --- Dark/Light mode variables ---
// Paleta principal
color-primary = #086eb6
color-secondary = #5db02c
color-accent = #f78c6b
color-error = #ef476f
color-success = #06d6a0
