.wsp
  background #25D366
  color white
  font-size 34px
  position fixed
  bottom 64px
  right 16px
  border-radius 50%
  height 48px
  width 48px
  text-align center
  padding-top 6px
  @media (min-width: d-break)
    bottom 16px



.burger
  font-size 22px
  @media (min-width: d-break)
    display none

.avatar
  font-size 22px
  margin-left 4px
  &.yellow
    color #ffe400
  &.blue
    color #0093cb
  &.green
    color #14ec42

.load
  display block
  height 16px
  width 16px
  border-radius 50%
  border solid 1.5px rgba(c-gray, .5)
  border-right-color transparent
  border-bottom-color transparent
  animation 1s linear infinite rotate
  margin auto

@keyframes rotate {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}


.controls
  text-align center
  color white
  i
    margin: 6px 12px
    padding: 8px
    cursor: pointer
