.input
    font-family: 'Open Sans', sans-serif;
    padding: 8px 16px;
    border-radius: 45px;
    border: solid 1px #008000
    width: 345px;
    margin: 10px 0;
    font-size: 13.3333px;
    display: inline-block;
    background: #fff;
    height: 48px;
    margin-bottom: 30px;

  &.error
    border solid 1px red
  &.pass
    padding-right 24px

.input-register
  font-family: 'Open Sans', sans-serif;
  padding: 8px 16px;
  border-radius: 45px;
  border: solid 1px rgba(255, 107, 0, 1)
  width: 345px;
  margin: 0px;
  font-size: 13.3333px;
  display: inline-block;
  background: #fff;
  height: 34px;
  margin-top: 12px;


@media (max-width: 1260px) {
  .input-register {
    width 280px
  }
}
@media(max-width: 1024px) {
  .input {
    width 280px
  }
}