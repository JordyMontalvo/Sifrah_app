// Estilos específicos para Login.vue

.login-button
  border-radius 29px
  width 345px
  height 50px
  background #9f00ad
  color white // Color del texto
  border none // Sin borde
  cursor pointer // Cambia el cursor al pasar sobre el botón
  transition background 0.3s ease
  margin-left 13px
  margin-top 10px
  transition all 0.3s ease // Transición suave para el hover

  &:hover
    background #d209b6 // Color de fondo al hacer hover

// Google Login Button Styles
.google-login-btn
  display flex
  align-items center
  justify-content center
  width 200px
  height 40px
  margin 0 auto 8px auto
  background #fff
  color #444
  border 1px solid #ddd
  border-radius 20px
  font-size 14px
  font-weight 500
  box-shadow 0 1px 2px rgba(0, 0, 0, 0.04)
  cursor pointer
  transition box-shadow 0.2s, border 0.2s
  padding 0 10px
  margin-bottom -22px

  &:hover
    box-shadow 0 2px 6px rgba(66, 133, 244, 0.12)
    border 1px solid #bcbcbc

.google-logo-img
  width 18px
  height 18px
  margin-right 8px
  display block

.tab-login
  font-size 15px
  color rgba(137, 136, 141, 1)
  text-decoration none
  padding 10px 20px
  border-bottom solid 2px rgba(137, 136, 141, 1)
  transition all 0.3s ease
  margin-top 10%
  margin-bottom 10%
  transition all 0.3s ease

  &.active
    color #9F00AD // marrón oscuro
    border-bottom solid 4px #FFD900 // barra amarilla más gruesa
    font-weight bold
    transition all 0.3s ease
    position relative

    &::after
      content ''
      position absolute
      bottom -4px
      left 50%
      transform translateX(-50%)
      width 100% // Barra que cubre todo el ancho de la pestaña
      height 4px
      background-color #FFD900
      border-radius 2px

.label-login-2
  font-size 12px
  color rgba(137, 136, 141, 1)
  display block
  margin-right 460px
  margin-top 10px

.label-login
  font-size 12px
